    <![endif]-->
  </head>
  <body>
    <h1>Make a Reservation</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <br>
      
    <% if (rooms.length > 0) { %>
      <div class="container">
      <form method="post">
        <table class="w3-table-all" style="width:100%">
        <tbody>
          <tr>
            <th>Room Number</th>
            <th>Room Category</th>
            <th># Persons Allowed</th>
            <th>Cost per Day</th>
            <th>Cost of Extra Bed per Day</th>
            <th>Select Room</th>
          </tr>
        <% for (var i in rooms) { %>
          <% var room = rooms[i]; %>
          <tr>
            <td><%= room.Room_no %></td>
            <td><%= room.Room_category %></td>
            <td><%= room.No_people %></td>
            <td><%= room.Cost_day %></td>
            <td><%= room.Cost_extra_bed_day %></td>
            <td>
              <input type="checkbox" name="select_room" value="<%= room.Room_no%> <%= room.location %>"><br>
            </td>
          </tr>
        <% } %>
        </tbody>
        </table>
        <br>
        <button type="submit" class="btn btn-default">Reserve Selected Rooms</button>
      </form>
    </div>
    <% } else { %>
      <h4>No rooms meet your search criteria. <a href="/updatereservations2">Try A different Search</a></h2>
    <% } %>
